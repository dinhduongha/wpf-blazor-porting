<Blazorise.Button Color="Color.Light" Style="@Style" @onclick="Click">@Content</Blazorise.Button>
@inherits WpfStyleBase 
@code {
    [Parameter]
    public string Content { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> Click { get; set; }

    public string Style
    {
        get
        {
            // WPF Marging is in left,top,right,bottom
            // CSS Margin is in  top, right, bottom, left
            var o = Margin.Split(',');
            return $"position:absolute; margin: {o[1]}px {o[2]}px {o[3]}px {o[0]}px; width: {Width}px; height: {Height}px; vertical-align: {VerticalAlignment}";
        }
    }
}
                            